<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="title_text">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="title_button_text">
        <item name="android:textSize">@dimen/text_title_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="text_content_show_two">
        <item name="android:textSize">@dimen/text_content</item>
        <item name="android:textColor">@color/result_view</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="text_content_coupon">
        <item name="android:textSize">@dimen/text_content</item>
        <item name="android:textColor">@color/datasta_red</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="text_content_show_two_cpgray">
        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:textColor">@color/gray_deep</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="text_content">
        <item name="android:textSize">@dimen/text_content</item>
        <item name="android:textColor">@color/text_color_gray</item>
    </style>

    <style name="text_button">
        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:textColor">@color/cp_gray</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="text_button_white">
        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    
     <!-- zxing 条码扫描 -->
    <style name="ResultButton">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ShareButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
