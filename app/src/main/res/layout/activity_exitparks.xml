<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/ExitCar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/item_white_gray_selector"
            android:drawableTop="@drawable/car_icon"
            android:gravity="center"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:textStyle="bold"
            android:text="车牌识别"
            android:layout_marginRight="2dp"
            android:textColor="@color/text_color_gray"
            android:textSize="36sp" />

        <Button
            android:id="@+id/unExitCar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/item_white_gray_selector"
            android:drawableTop="@drawable/car_icon"
            android:paddingBottom="30dp"
            android:paddingTop="30dp"
            android:textStyle="bold"
            android:text="扫码识别"
            android:textColor="@color/text_color_gray"
            android:textSize="36sp"
            android:layout_marginLeft="2dp"
            />
    </LinearLayout>
    <Button
        android:visibility="gone"
        android:id="@+id/scan"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:background="@drawable/item_white_gray_selector"
        android:drawableTop="@mipmap/car_icon"
        android:gravity="center"
        android:padding="40dp"
        android:text="二维识别"
        android:layout_marginRight="2dp"
        android:textColor="@color/text_color_gray"
        android:textSize="18sp" />

    <Button
        android:id="@+id/home_break"
        style="@style/text_button_white"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_green_gray_selector"
        android:text="返回"
        />

</LinearLayout>
