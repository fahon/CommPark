<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_exit_park_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:text="优惠券码:"
        android:textSize="17sp" />

    <LinearLayout
        android:id="@+id/ll_write_coupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bt_gary_black"
        android:orientation="horizontal"
        android:padding="5dp">

        <EditText
            android:id="@+id/et_couponnum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入优惠券码"
            android:textColorHint="@color/gray" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:text="优惠券种类:"
        android:textSize="17sp"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/rl_coupon_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bt_gary_black"
        android:orientation="horizontal"
        android:padding="15dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_couponName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="请选择优惠券名称"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/coupon_name_down"
            android:paddingRight="20dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/activity_coupon_sure"
        style="@style/text_button_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_green_gray_selector"
        android:text="确定" />


</LinearLayout>
