<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_RelativeLayout_click"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/item_white_gray_selector"
        android:clickable="true">
        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/item_ImageView_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/car_icon"
            />
        <TextView
            android:gravity="center"
            android:layout_centerInParent="true"
            android:id="@+id/item_TextView_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:text="进车"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/text_title"
            android:layout_below="@+id/item_ImageView_img"></TextView>
    </RelativeLayout>
</RelativeLayout>